{
  "name": "db-exam",
  "version": "1.0.0",
  "description": "Database exam project",
  "main": "index.js",
  "author": "Claudio Cortese",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node index",
    "dev": "nodemon --exec 'heroku local' --signal SIGTERM",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "pretty": "prettier --write ./**/*.js"
  },
  "dependencies": {
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "doi-regex": "^0.1.10",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.21.1",
    "issn": "^1.0.5",
    "morgan": "^1.9.1",
    "orcid-utils": "^1.0.2",
    "pg": "^7.8.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.43.0",
    "sequelize-querystring": "^0.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-angular": "^7.5.0",
    "conventional-changelog-cli": "^2.0.11",
    "eslint": "^5.12.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./**/*.js": [
      "yarn pretty",
      "yarn lint:fix",
      "git add"
    ]
  }
}
